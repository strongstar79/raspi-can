[Unit]
Description=KOCETI CAN Launcher (%i)
Requires=network.target network-onile.target
After=network.target network-online.target

[Service]
Type=simple
User=%i
WorkingDirectory=/home/%i/raspi-can
ExecStart=/home/%i/raspi-can/launch.sh
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
